<div class="flex justify-between items-center mx-4 mb-2 md:max-w-[50%]">
  <h1 class="text-2xl font-bold text-orange-200">All Kittens</h1>
  <%= link_to "Add a new kitten!",
              new_kitten_path,
              class: "text-violet-300 underline hover:text-slate-100" %>
</div>

<ul class="ml-4">
  <% @kittens.each do |kitten| %>
    <li class="mb-8">
      <p class="text-lg font-bold mb-2"><%= kitten.name %></p>
      <div class="flex gap-4 items-center">
        <%= link_to "Kitty Stats",
                    kitten,
                    class: "text-violet-300 underline hover:text-slate-100" %>

        <%= button_to "Delete Kitty",
                      @kitten,
                      method: :delete,
                      class: "border border-transparent py-1 px-2 ml-6 bg-red-300
                              text-black font-bold rounded-md hover:bg-transparent
                              border-2 hover:border-red-300 hover:text-red-300" %>
      </div>
    </li>
  <% end %>
</ul>
