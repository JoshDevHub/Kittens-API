<div class="flex justify-between items-center mx-4 mb-2 md:max-w-[50%]">
  <h1 class="text-2xl font-bold text-orange-200">All Kittens</h1>
  <%= link_to "Add a new kitten!",
              new_kitten_path,
              class: "text-violet-300 underline hover:text-slate-100" %>
</div>

<ul class="ml-4">
  <% @kittens.each do |kitten| %>
    <li class="mb-8">
      <p class="text-lg font-bold mb-2"><%= kitten.name %></p>
      <div class="flex gap-4">
        <%= link_to "Kitty Stats",
                    kitten,
                    class: "text-violet-300 underline hover:text-slate-100" %>
        <%= button_to kitten,
                      method: :delete,
                      class: "border border-black px-2 bg-teal-200
                              text-black font-bold round-md
                              hover:text-red-300 hover:bg-transparent
                              hover:border-red-300" do %>
          <i class="fa-solid fa-xmark"></i>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>
