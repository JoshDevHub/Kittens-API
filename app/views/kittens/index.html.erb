<h1 class="font-bold">Hello Kittens</h1>

<%= link_to "Add a new kitten!", new_kitten_path %>

<ul>
  <% @kittens.each do |kitten| %>
    <li>
      <%= link_to kitten.name, kitten %>
      <%= button_to "Delete Kitten", kitten_path(kitten), method: :delete,
          class: "border border-black p-2" %>
    </li>
  <% end %>
</ul>
